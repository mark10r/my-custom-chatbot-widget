# Rule for loader.js (MUST be at the top)
/loader.js
  Content-Type: application/javascript
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type
  Cache-Control: public, max-age=60, must-revalidate # Short cache for loader.js

# Redirects for stable widget URLs (for main.js and main.css)
/assets/main.js /assets/index-*.js 200
/assets/main.css /assets/index-*.css 200

# CORS headers for all other assets (optional, but good practice)
/assets/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type